= simple_form_for @batch, url: url, html: { class: "form-horizontal" } do |f|

  = f.association :item_master, collection: ItemMaster.all.map {|o| [o.code_description, o.id]}, input_html: {class: 'span6'}
  = f.input :comment, input_html: {class: 'span12'}, placeholder: 'Brief notes ...'

  .form-actions
    = f.submit (@batch.persisted? ? 'Update' : 'Add'), :class => "btn btn-primary"
    = link_to "Cancel", :back, :class => "btn"