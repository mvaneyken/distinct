= simple_form_for @client, url: url, html: { class: "form-horizontal" } do |f|
  
  - if f.error_notification
    = render :partial => 'shared/errors', :locals => {:f => f, :object => @client}
    
  = f.input :code, input_html: {class: 'input-small'}, autofocus: true
  = f.input :name, input_html: {class: 'span4'}
  
  .form-actions
    -if @client.persisted?
      = f.submit 'Update client', :class => "btn"
    -else
      = f.submit 'Add', :class => "btn btn-primary"
